@import "/pages/zanui/index.wxss";

.container {
  background: #F9F9F9;
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0;
}
.container::before {
  position: fixed;
  top: 0;
  left: 0;
  content: ' ';
  width: 100%;
  height: 1rpx;
  background-color: #e2e2e2;
  z-index: 5;
}
.doc-title {
  position: relative;
  padding: 15px 0;
  margin: 10px 15px;
  line-height: 25px;
  font-size: 25px;
  color: #666;
}
.doc-description {
  margin: 14px 0;
  padding: 0 15px;
  font-size: 14px;
  line-height: 20px;
  color: #666;
}

.cell-panel-demo {
  display: block;
}

.loading-example {
  display: flex;
  flex-direction: row;
  background: transparent;
}
.loading-example zan-loading {
  flex: 1;
}
.no-flex {
  display: block;
}

.tag-demo {
  display: block;
}

zan-tag + zan-tag {
  margin-left: 10px;
}

.search-img{
  height: 20px;
  width: 20px;
}
.search-container{
  position: relative;
  width:100%;
}

.vertical-line {
  border-left: 1px solid #e5e5e5;
  width: 1px;
  height: 48px;
  margin: 0 auto;
}

.text-tips {
  margin-left: 15px;
  margin-right: 15px;
}