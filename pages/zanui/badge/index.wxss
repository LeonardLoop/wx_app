.zan-badge {
  position: relative;
}

.zan-badge__text {
  position: absolute;
  top: -.4em;
  right: 0;
  height: 0.8em;
  min-width: 0.8em;
  line-height: 0.8em;
  padding: 0 0.4em;
  font-size: 20px;
  border-radius: 0.8em;
  background: #f44;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  transform: translateX(50%) scale(0.5);
  transform-origin: center;
  z-index: 10;
  box-shadow: 0 0 0 2px #fff;
  box-sizing: border-box;
}
